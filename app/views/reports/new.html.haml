%h1
  = t 'report.new_heading'


= simple_form_for resource, url: { action: :create }, html: {class: 'form-vertical' } do |f|
  = f.input :question1, input_html: { class: 'multi_answer', name: 'report[question1][]' }
  = f.input :question2, input_html: { class: 'multi_answer', name: 'report[question2][]' }
  = f.input :question3, input_html: { class: 'multi_answer', name: 'report[question3][]' }
  = f.input :question4, input_html: { class: 'multi_answer', name: 'report[question4][]' }

  = f.button :submit